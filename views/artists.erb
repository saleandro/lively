<div class="row">
  <div class="col-sm-12"><h1><a href="/artists">artist</a></h1></div>
</div>

<div class="row">
  <div class="col-sm-12">
    <form class="form-inline"  method="get" action="/artists">
       <fieldset>
      <input type="text" placeholder="artist name" style="width:220px;" name="artist_name" value="<%= params[:artist_name] %>" required>
      <input type="text" placeholder="year (optional)" name="year" style="width:120px;" value="<%= params[:year] %>" maxlength="4" minlength="4">
      <input class="btn" type="submit" value="Go!">
       </fieldset>
    </form>
  </div>
</div>
<% if params[:artist_name] %>
<div class="row" style="margin-top:10px">
  <div class="col-sm-8">
    <div class="alert alert-info" role="alert">Sorry, we couldn’t find “<%= params[:artist_name] %>” :(</div>
  </div>
</div>
<% end %>

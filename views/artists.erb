<div class="row">
  <div class="col-sm-12"><h1><a href="/artists">artist</a></h1></div>
</div>

<div class="row">
  <div class="col-sm-12">
    <form class="form-inline"  method="get" action="/artists">
       <fieldset>
      <input type="text" placeholder="artist" name="artist_name" value="<%= params[:artist_name] %>">
      <input type="text" placeholder="year (optional)" name="year">
      <input class="btn" type="submit" value="Go!">
       </fieldset>
    </form>
  </div>
</div>
<% if params[:artist_name] %>
<div class="row" style="margin-top:10px">
  <div class="col-sm-8">
    <div class="alert alert-info" role="alert">Sorry, we couldn’t find “<%= params[:artist_name] %>” :(</div>
  </div>
</div>
<% end %>
